{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$esbuild-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			}
		},
		{
			"type": "npm",
			"script": "compile-test",
			"problemMatcher": "$tsc",
			"isBackground": false,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build"
			}
		}
	]
}
